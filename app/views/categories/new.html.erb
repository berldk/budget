<h1 class="title">New Category</h1>
<div class="tile is-ancestor">
  <div class="tile is-parent">
    <div class="tile is-child is-6 box">
        <%= form_with scope: :category, url: categories_path, local: true do |form| %>
            <% if @category.errors.any? %>
                <div id="error_explanation">
                <h2>
                    <%= pluralize(@category.errors.count, "error") %> prohibited
                    this category from being saved:
                </h2>
                <ul>
                    <% @category.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>
            <p>
                <%= form.label :Description %><br>
                <%= form.text_field :cDesc %>
            </p>
     
            <p>
                <%= form.submit %>
            </p>
        <% end %>
    </div>
  </div>
</div>
<%= link_to 'Back', categories_path %>
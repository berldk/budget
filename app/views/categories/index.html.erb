<section class="hero is-info is-small">
  <div class="hero-body ">
    <h1 class="title">Listing Categories</h1>
  </div>
</section>
<% if current_user && current_user.admin %>
<%= link_to 'New category', new_category_path %> | <%= link_to 'New budget', new_budget_path %>
<% else  %> <%= link_to 'Create or view budget', controller: 'budgets' %>
<% end %>

<table style="width:50%; margin: 0 auto;" class="table" >
  <tr>
    <th >Description</th>
    <th colspan="3" style="text-align:center">Actions</th>
  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.cDesc %></td>
      <td><%= link_to 'Show', category_path(category) %>  </td>
      <% if current_user && current_user.admin %>
      <td><%= link_to 'Edit', edit_category_path(category) %>  </td>
      <td><%= link_to 'Destroy', category_path(category),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>